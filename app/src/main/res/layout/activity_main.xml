<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:background="@drawable/border">

    <TextView
        android:id="@+id/text_one"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="16dp"
        android:background="@drawable/border" />
    <TextView
        android:id="@+id/text_two"
        android:text="@string/info_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_one"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:padding="16dp"
        android:background="@drawable/border" />
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_two"
        android:layout_marginTop="10dp"
        android:src="@drawable/drapeau_sen"
        android:contentDescription="Description de l'image" />
    <Button
        android:id="@+id/button"
        android:text="@string/bouton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/rose"
        android:background="@color/bleu"
        android:padding="30dp"
        android:layout_marginTop="10dp"
        android:onClick="afficherStart" />
    </LinearLayout>
</RelativeLayout>
